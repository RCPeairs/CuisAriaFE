    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>

            <Entry Grid.Row="0" Text="{Binding RecipeName}" Placeholder="Recipe Name" />
            <StackLayout Orientation="Horizontal" Grid.Row="1">

                <Label Text="Serving Size:" VerticalTextAlignment="End"/>
                <Picker x:Name="srvngPicker" 
                        HeightRequest="25"
                        SelectedItem="{Binding ServingSize}" 
                        ItemsSource="{StaticResource servings}"/>
            </StackLayout>

            <Grid Grid.Column="1" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Label Text="Prep Time" Grid.Row="0" />
                <StackLayout Orientation="Horizontal">
                    <Label Text="Hours:"/>
                    <Picker x:Name="prephrPicker"
                        HeightRequest="25"
                        SelectedItem="{Binding HoursPrepTime}"
                        ItemsSource="{StaticResource prepHours}"/>
                </StackLayout>
            </Grid>



