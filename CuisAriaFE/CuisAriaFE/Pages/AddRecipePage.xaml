        <ToolbarItem Icon="icon_blankSpace.png" Order="Primary" Priority="5"/>-->
        <!--<ToolbarItem Text="Settings" Order="Secondary" Clicked="OnSettingsClicked"/>-->
        <ToolbarItem Text="LogOut" Order="Secondary" Clicked="OnLogOutClicked"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <ScrollView>
            <StackLayout VerticalOptions="FillAndExpand">
                <Entry x:Name="rcpNameLabel" FontSize="Large" Text="{Binding NewRcp.RecipeName}" Placeholder="Recipe name"/>
                <Entry x:Name="rcpDescLabel" FontSize="Medium" Text="{Binding NewRcp.Description}" Placeholder="Description"/>
                <!--<Label Text=""-->
                <!--<Stepper x:Name="servingsStepper" Minimum="1" Maximum="12" Value="{Binding NewRcp.Servings}"/>-->
                <StackLayout Orientation="Horizontal">
                    <Picker x:Name="servingsPicker">
                        <Picker.Items>
                            <x:String>1</x:String>
                            <x:String>2</x:String>
                            <x:String>3</x:String>
                        </Picker.Items>
                    </Picker>

                    <Label VerticalTextAlignment="End" Text="Servings"/>
                    <TimePicker IsEnabled="False" Time="{Binding NewRcp.PrepTime}" Format="HH\h MM\m Prep" TextColor="Black"/>
                    <TimePicker IsEnabled="False" Time="{Binding NewRcp.CookTime}" Format="HH\h MM\m Cook" TextColor="Black"/>
                </StackLayout>
                <Label FontSize="Large" Text="Ingredients"/>
                <StackLayout>
                    <ListView x:Name="rcpIngredListView" ItemsSource="{Binding IngredientsList}" HasUnevenRows="True">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <StackLayout Padding="5,0,0,0" HorizontalOptions="StartAndExpand" Orientation="Horizontal">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <StackLayout Orientation="Horizontal" VerticalOptions="Center"  Grid.Row="0">
                                                <Entry x:Name="inputIngredQty" Grid.Column="0" WidthRequest="25" Placeholder="Qty" Text="{Binding IngredQty}" />
                                                <Entry x:Name="inputIngredFrac" Grid.Column="1" WidthRequest="25"  Placeholder="Fraction" Text="{Binding IngredQtyFrac}" />
                                                <Entry x:Name="inputIngredUnit" Grid.Column="2" WidthRequest="90"  Placeholder="Units" Text="{Binding IngredUnit}"/>
                                                <Entry x:Name="inputIngredName" Grid.Column="3" WidthRequest="240"  Placeholder="Name" Text="{Binding IngredName}"/>
                                            </StackLayout>
                                        </Grid>
                                    </StackLayout>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <Button x:Name="addIngredButton" Text="Add Ingredient" Clicked="OnAddIngredClicked"/>

                </StackLayout>
                
                <Label FontSize="Large" Text="Instructions"/>
                <StackLayout>
                    <ListView x:Name="rcpStepsListView" ItemsSource="{Binding StepIngredList}" HasUnevenRows="True">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <StackLayout Padding="5,0,0,0" Grid.Row="0" HorizontalOptions="StartAndExpand" Orientation="Horizontal">
                                            <Entry x:Name="inputStepNum" Grid.Column="0" WidthRequest="30" Placeholder="Step #" Text="{Binding StepNumber}" />
                                            <Entry x:Name="inputInstruction" Grid.Column="1" MinimumWidthRequest="350" Placeholder="Instruction" Text="{Binding Instruction}"/>
                                        </StackLayout>
                                    </Grid>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                        <Button x:Name="addStepButton" Text="Add Instruction" Clicked="OnAddStepClicked"/>
                </StackLayout>
                <Label FontSize="Large" Text="Notes"/>
                <Label Text="{Binding NewRcp.Notes}"/>
                <!--<Label FontSize="Large" Text="Keywords"/>
                <Label Text="{Binding Keywords}"/>-->
                <Button Text="Save" Clicked="OnSaveRecipeClicked"></Button>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>










