                        ItemsSource="{StaticResource cookMins}"/>-->


            <StackLayout Grid.Row="2" Orientation="Horizontal">

                <Picker x:Name="quantPicker" 
                        ItemsSource="{StaticResource quantity}"/>

                <Picker x:Name="fraction" 
                        ItemsSource="{StaticResource fraction}"/>

                <Picker x:Name="unitPicker" 
                        ItemsSource="{StaticResource unitOfMeasure}"/>

                <Entry Placeholder="Ingredient Name"/>
            </StackLayout>
            <Button Grid.Row="3" Text="Add More Ingredients" Clicked="Button_Clicked"/>
        </Grid>
