<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CuisAriaFE.Pages.SharedPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Shared Recipes ListView shows here" />
            <ListView IsRefreshing="{Binding IsBusy}" ItemsSource="{Binding SharedRcp}" ItemSelected="OnItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="5,0,0,0" HorizontalOptions="StartAndExpand" Orientation="Horizontal">
                                <Image WidthRequest="40"  HeightRequest="40" Source="{Binding RecipePic}" Aspect="AspectFill" />
                                <StackLayout>
                                    <Label FontFamily="Verdana"  Text="{Binding RecipeName}"/>
                                    <Label VerticalTextAlignment="Center" Text="{Binding Description}"/>
                                </StackLayout>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>