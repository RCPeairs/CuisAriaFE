<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CuisAriaFE.Pages.RegisterPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Label Text="CuisAria" Font="Arial" FontSize="Large" HorizontalOptions="CenterAndExpand"/>
            <Label Text="New User Registration" Font="Arial" FontSize="Medium" HorizontalOptions="CenterAndExpand"/>
            <Entry x:Name="userNameEntry" Placeholder="Enter User Name" HorizontalOptions="FillAndExpand" />
            <Entry x:Name="passwordEntry" Placeholder="Enter Password" HorizontalOptions="FillAndExpand" IsPassword="true" />
            <Entry x:Name="passwordEntry2" Placeholder="Re-enter Password" HorizontalOptions="FillAndExpand" IsPassword="true" />
            <Button Text="Register" Clicked="OnRegisterClicked"></Button>
            <Button Text="Return to Login" Clicked="OnGoToLoginClicked"></Button>
            <Label x:Name="messageLabel" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>