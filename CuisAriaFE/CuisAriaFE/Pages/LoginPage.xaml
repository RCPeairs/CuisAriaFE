<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:local="clr-namespace:CuisAriaFE" Title="CuisAria"  
             x:Class="CuisAriaFE.Pages.LoginPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <!--<Label Text="CuisAria" Font="Arial" FontSize="Large" HorizontalOptions="CenterAndExpand"/>-->
            <Entry x:Name="userNameEntry" Placeholder="Enter User Name" HorizontalOptions="FillAndExpand"/>
            <Entry x:Name="passwordEntry" Placeholder="Enter Password" HorizontalOptions="FillAndExpand" IsPassword="true" />
            <Button Text="Login" Clicked="OnLoginClicked" BackgroundColor="#EBC7EB"></Button>
            <Button Text="Register New User" Clicked="OnGoToRegClicked" BackgroundColor="#EBC7EB"></Button>
            <Label x:Name="messageLabel" />
            <Image Source="http://prostokvashino.ru/upload/157.jpg" HorizontalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>