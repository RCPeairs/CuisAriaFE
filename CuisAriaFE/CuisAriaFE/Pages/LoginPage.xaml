<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:local="clr-namespace:CuisAriaFE" Title="CuisAria"  
             x:Class="CuisAriaFE.Pages.LoginPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <!--<Label Text="CuisAria" Font="Arial" FontSize="Large" HorizontalOptions="CenterAndExpand"/>-->
            <Entry x:Name="userNameEntry" Placeholder="Enter User Name" HorizontalOptions="FillAndExpand" PlaceholderColor="{DynamicResource BoldYellow}"/>
            <Entry x:Name="passwordEntry" Placeholder="Enter Password" HorizontalOptions="FillAndExpand" PlaceholderColor="{DynamicResource BoldYellow}" IsPassword="true" />
            <Button Text="Login" Clicked="OnLoginClicked" TextColor="{DynamicResource BoldYellow}" BackgroundColor="{DynamicResource Violet}"></Button>
            <Button Text="Register New User" Clicked="OnGoToRegClicked" TextColor="{DynamicResource BoldYellow}" BackgroundColor="{DynamicResource Violet}"></Button>
            <Label x:Name="messageLabel" />
            <Image Source="http://imageresize.org/Output/5387cf36-59c1-40eb-827c-8fd8e19f0592.jpg" HorizontalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>