<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CuisAriaFE.Pages.CurrentMenuPage">
    <ContentPage.Content>
        <StackLayout Orientation="Horizontal">
            <Button Image="" Clicked="Button_Clicked"/>
            <Label Text="{Binding Menu.Name}"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <ListView>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding MenuRecipe.Recipe}" />
                        <TextCell Text="{Binding MenueRecipe.Servings}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Entry HorizontalTextAlignment="Center"/>
            <Button Text="Save Menu" Clicked="Save_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>