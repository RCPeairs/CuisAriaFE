<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CuisAriaFE.Pages.SettingsPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Select an option for Unit of Measure:"/>
            <Picker x:Name="uomPicker">
                <Picker.Items>
                    <x:String>US Standard</x:String>
                    <x:String>Metric</x:String>
                    <x:String>Recipe Default</x:String>
                </Picker.Items>
            </Picker>
            <Button Text="Save" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>